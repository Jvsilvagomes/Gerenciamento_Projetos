generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Exemplo de modelo
model Projeto {
  id         Int      @id @default(autoincrement())
  nome       String?
  descricao  String   @unique
  orcamento  Int
  gerente    String?
  prazo      DateTime
  dataInicio DateTime 
  ativo Boolean @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("projetos")
}
